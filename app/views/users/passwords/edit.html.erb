<div class="container">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form", class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, 'New Password', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.input_field :password, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm your new password', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.input_field :password_confirmation, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit, "Change my password", class: "btn btn-default" %>
    </div>
  </div>

<% end %>
</div>
<%= render "users/shared/links" %>
