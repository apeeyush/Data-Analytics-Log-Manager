<form class="form-horizontal" id="transformation_form">
  <div class="form-group">
    <textarea name="json-textarea" id="json-textarea" class="form-control top-buffer" data-bind="value: ko.toJSON($data, null, 4)" rows="20"></textarea>
  </div>

  <div class="form-group">
    <button type="button" class="btn btn-primary" id="js-submit-query" data-loading-text="Processing..."> Analyze Data </button>
  </div>


  <div class="form-group">
    <label class="col-md-2 control-label" for="query-name">Name</label>
      <div class="col-sm-4">
        <input name="query-name" id="query-name" class="form-control"></input>
      </div>
  </div>

  <div class="form-group">
    <button type="button" class="btn btn-primary" id="js-save-query">Save Data Query</button>
  </div>

</form>
